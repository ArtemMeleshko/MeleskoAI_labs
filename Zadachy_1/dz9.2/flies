#include <iostream>

using namespace std;

int main()
{
    int N , exorcismSpeed(10) ,flyReturnSpeed(0),fatigueTime(20);
    double  time, time_;
    int P; //20 minutes

    cout << "Enter the number of flies: ";
    cin >> N;

while ( N == 0)
   
       
    P = fatigueTime * exorcismSpeed ;

    if ( N <= P)
    {

        time = N / exorcismSpeed;
        cout << time ;
    }
    else
    {

        time = P / exorcismSpeed;
        exorcismSpeed = 8;
        time_ = (N - P) / exorcismSpeed;
        time += time_;
        cout << time;
    }
   

    return 0;
}
